# AI News App Environment Variables

# Scraper Backend URL
VITE_SCRAPER_API_URL=http://localhost:8001

# OpenRouter Integration
VITE_OPENROUTER_API_URL=https://openrouter.ai/api/v1
VITE_OPENROUTER_MODELS_ENDPOINT=https://openrouter.ai/api/v1/models
VITE_OPENROUTER_AUTH_ENDPOINT=https://openrouter.ai/api/v1/auth/key

# API Keys (optional - for fallback methods)
VITE_NEWS_API_KEY=
VITE_NEWSDATA_API_KEY=

# Application Settings
VITE_APP_TITLE=AI News Hub
VITE_APP_DESCRIPTION=Latest AI news and research papers with AI-powered summarization

# Cache Settings (milliseconds)
VITE_CACHE_TIMEOUT_NEWS=300000
VITE_CACHE_TIMEOUT_PAPERS=600000
VITE_CACHE_TIMEOUT_MODELS=3600000

# Feature Flags
VITE_ENABLE_PROGRESSIVE_LOADING=true
VITE_ENABLE_VIRTUALIZATION=true
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_AI_SUMMARIZATION=true

# AI Settings
VITE_DEFAULT_AI_MODEL=anthropic/claude-3-5-sonnet-20241022
VITE_AI_MAX_TOKENS=1000
VITE_AI_TEMPERATURE=0.7
VITE_AI_RETRY_ATTEMPTS=3