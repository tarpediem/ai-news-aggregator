# AI News App Docker Environment Variables

# Crawl4AI Configuration
CRAWL4AI_API_TOKEN=your_secret_token_here

# OpenAI Configuration (for summarization)
OPENAI_API_KEY=your_openai_api_key_here

# Application URLs
VITE_SCRAPER_API_URL=http://localhost:8001

# Optional API Keys for fallback methods
VITE_NEWS_API_KEY=
VITE_NEWSDATA_API_KEY=

# Feature Flags
VITE_ENABLE_PROGRESSIVE_LOADING=true
VITE_ENABLE_VIRTUALIZATION=true
VITE_ENABLE_OFFLINE_MODE=true

# Node Environment
NODE_ENV=production